<div class="container">
  <h1><%= @task.title %></h1>
  <div class="py-2"><%= @task.details %></div>
  <% if @task.completed == true  %>
        <p><i class="fa-regular fa-square-check"></i> This task is completed</p>
      <% else %>
        <p><i class="fa-regular fa-square"></i> This task is not completed yet</p>
      <% end %>
      <%=link_to "Back to list", tasks_path%>
      <%=link_to "Edit Task", edit_task_path%>
</div>
